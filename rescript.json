{
  "name": "your-project-name",
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    },
    {
      "dir": "app",
      "subdirs": true
    },
    {
      "dir": "components",
      "subdirs": true
    },
    {
      "dir": "__tests__",
      "subdirs": true,
      "type": "dev"
    }
  ],
  "jsx": { "version": 4 },
  "package-specs": [
    {
      "module": "commonjs",
      "in-source": true
    }
  ],
  "suffix": ".res.cjs",
  "bs-dependencies": [
    "@rescript/core",
    "@rescript/react",
    "rescript-react-native",
    "@glennsl/rescript-jest"
  ],
  "bsc-flags": [
    "-open RescriptCore"
  ],
  "gentypeconfig": {
    "module": "esmodule",
    "moduleResolution": "node",
    "generatedFileExtension": ".gen.tsx",
    "debug": { "all": false, "basic": false }
  }
}

